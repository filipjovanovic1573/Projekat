<html t:type="layout" title="${message:title}"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

    <!-- Main hero unit for a primary marketing message or call to action -->

    <div>
        <h1 class="text-center text-info">${message:h1-text}</h1><br></br>
            <table class="grid-dark col-md-12" t:type="grid" add="userId" exclude="id, createTime" source="songs" row="song" inPlace="true" rowsPerPage="20" pagerPosition="bottom">
                <p:linkCell>
                    <t:actionlink t:id="download" t:context="${song.getId()}" download="${song.getName()}">${message:download}</t:actionlink>
                </p:linkCell>
                <p:userIdCell>
                    ${song.userId}
                </p:userIdCell>
            </table>
    </div>
</html>
